<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_alamat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_input_alamat" />

    <EditText
        android:backgroundTint="@color/white"
        android:id="@+id/editTextJalan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/background_alamat"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:backgroundTint="@color/white"
        android:id="@+id/editTextKelurahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/background_alamat"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:backgroundTint="@color/white"
        android:id="@+id/editTextKecamatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/background_alamat"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:backgroundTint="@color/white"
        android:id="@+id/editTextKodePos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/background_alamat"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/simpan_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:background="@android:color/white"
        android:text="SIMPAN"
        android:textColor="@color/white"

        app:backgroundTint="@color/black"
        app:elevation="10px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/background_alamat"
        app:layout_constraintTop_toTopOf="@+id/background_alamat" />


</androidx.constraintlayout.widget.ConstraintLayout>