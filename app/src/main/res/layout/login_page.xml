<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundYobi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_login"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="309dp"
        android:layout_height="50dp"
        android:layout_marginTop="368dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:paddingLeft="50sp"
        android:hint="Username/Nomor Ponsel"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/backgroundYobi"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_marginTop="448dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:paddingLeft="50sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundYobi"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/backgroundYobi"
        app:layout_constraintTop_toTopOf="@+id/backgroundYobi" />


    <Button
        android:id="@+id/Login"
        android:layout_width="104dp"
        android:layout_height="56dp"
        android:layout_marginTop="532dp"

        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/black"

        android:text="Login"
        android:onClick="do_login"
        android:textColor="@color/white"
        app:backgroundTint="@color/black"
        app:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/backgroundYobi"
        app:layout_constraintTop_toTopOf="@+id/backgroundYobi"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login">


    </LinearLayout>

    <TextView
        android:id="@+id/register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="register"
        android:text="Daftar disini"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/input_password"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/akun"
        app:layout_constraintTop_toTopOf="@+id/akun" />

    <TextView
        android:id="@+id/akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="28dp"
        android:text="Belum memiliki akun? "
        app:layout_constraintStart_toStartOf="@+id/input_password"
        app:layout_constraintTop_toBottomOf="@+id/Login" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="260dp"
        android:layout_height="208dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundYobi"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundYobi"
        app:srcCompat="@mipmap/ic_iconyobi_foreground" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="33dp"
        android:layout_height="33dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView41"
        app:layout_constraintEnd_toEndOf="@+id/input_email"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="@+id/input_email"
        app:layout_constraintTop_toTopOf="@+id/input_email"
        app:layout_constraintVertical_bias="0.228"
        app:srcCompat="@mipmap/ic_icon_user_foreground" />

    <ImageView
        android:id="@+id/imageView41"
        android:layout_width="68dp"
        android:layout_height="73dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="248dp"
        app:layout_constraintEnd_toEndOf="@+id/input_password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/backgroundYobi"
        app:layout_constraintTop_toBottomOf="@+id/input_email"
        app:srcCompat="@mipmap/ic_icon_password_foreground" />


</androidx.constraintlayout.widget.ConstraintLayout>